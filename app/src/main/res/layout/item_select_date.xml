<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="60dp"

        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_card_medium"
        android:layout_marginTop="@dimen/margin_card_medium"
        android:layout_marginEnd="@dimen/margin_card_medium"
        android:layout_marginBottom="@dimen/margin_card_medium"
        android:background="@drawable/background_date_selected"
        android:padding="@dimen/margin_card_medium_2">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="TUE"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryLight" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:text="12"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/text_regular_2x" />
    </RelativeLayout>
</RelativeLayout>